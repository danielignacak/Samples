    </Row>
    <Row Visibility="{New AdresExtender.ShowStreetRowAsSecond}">
      <Field CaptionHtml="Ulica" EditValue="{Ulica}" OuterWidth="60" />
      <Field CaptionHtml="Nr domu" OuterWidth="26" LabelWidth="11" EditValue="{NrDomu}" />
      <Field CaptionHtml="Nr lokalu" OuterWidth="24" LabelWidth="8" EditValue="{NrLokalu}" />
    </Row>
    <Field CaptionHtml="Poczta" Width="30" EditValue="{Poczta}" />
    <Row>
      <Field CaptionHtml="Gmina" EditValue="{Gmina}" OuterWidth="60" Width="30" Class="LeftAlign"/>
      <Field CaptionHtml="Powiat" OuterWidth="50" LabelWidth="11" EditValue="{Powiat}" />
    </Row>
    <Row>
      <Field CaptionHtml="Województwo" EditValue="{Wojewodztwo}" OuterWidth="60" Width="30" Class="LeftAlign"/>
      <Field CaptionHtml="Kraj" EditValue="{KodKraju}" LabelWidth="11" OuterWidth="23" />
      <Field CaptionHtml="" EditValue="{Kraj}" OuterWidth="27"/>
    </Row>
    <Row Name="DaneKontaktowe">
      <Field CaptionHtml="Nr telefonu" EditValue="{Telefon}" OuterWidth="60" Width="30" Class="LeftAlign"/>
      <Field CaptionHtml="Nr faksu" LabelWidth="11" EditValue="{Faks}" OuterWidth="50" />
    </Row>
  </Stack>
</DataForm>